<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="xyz.zzyandzzy.utility.supertoastdemo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text" />

        <Button
            android:id="@+id/main_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image" />

        <Button
            android:id="@+id/main_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info" />

        <Button
            android:id="@+id/main_button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waring" />

        <Button
            android:id="@+id/main_button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LongTime" />

        <Button
            android:id="@+id/main_button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center" />

        <Button
            android:id="@+id/main_button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elevation" />

    </LinearLayout>

</LinearLayout>
